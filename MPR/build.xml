<?xml version="1.0" encoding="UTF-8"?>
<project name="MPR">
	<target name="compile">
		<mkdir dir="bin"/>
		<javac srcdir="src" destdir="bin"/>
	</target>
	
	<target name="jar">
		<mkdir dir="bin/jar"/>
		<jar destfile="bin/jar/MPR.jar" basedir="bin">
			<manifest>
				<attribute name="Main-Class" value="MAIN"/>
			</manifest>
		</jar>
	</target>
	
	<target name="run-jar" depends="jar">
		<java jar="bin/jar/MPR.jar" fork="true"/>
	</target> 

	<target name="clean">
		<delete dir="bin/jar">
		</delete>
	</target>

</project>